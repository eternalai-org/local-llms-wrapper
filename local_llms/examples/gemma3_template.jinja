{{ bos_token }}

{%- if messages[0]['role'] == 'system' -%}
  {%- if messages[0]['content'] is string -%}
    {%- set first_user_prefix = messages[0]['content'] + '\n' -%}
  {%- else -%}
    {%- set first_user_prefix = messages[0]['content'][0]['text'] + '\n' -%}
  {%- endif -%}
  {%- set loop_messages = messages[1:] -%}
{%- else -%}
  {%- set first_user_prefix = "" -%}
  {%- set loop_messages = messages -%}
{%- endif -%}

{%- macro replace_tokens(text) -%}
  {%- set regex = r"<unused\d*>" -%}
  {{- text | regex_replace(regex, "<unk>") -}}
{%- endmacro -%}

{%- for message in loop_messages -%}
  
  {%- if (message['role'] == 'assistant') -%}
    {%- set role = "model" -%}
  {%- else -%}
    {%- set role = message['role'] -%}
  {%- endif -%}
  
  {{ '<start_of_turn>' + role + '\n' + (replace_tokens(first_user_prefix) if loop.first else "") }}
  
  {%- if message['content'] is string -%}
    {{ replace_tokens(message['content']) }}
  {%- elif message['content'] is iterable -%}
    {%- for item in message['content'] -%}
      {%- if item['type'] == 'image' -%}
        {{ '<start_of_image>' }}
      {%- elif item['type'] == 'text' -%}
        {{ replace_tokens(item['text']) }}
      {%- endif -%}
    {%- endfor -%}
  {%- else -%}
    {{ "" }}
  {%- endif -%}
  
  {{ '<end_of_turn>\n' }}
{%- endfor -%}

{%- if add_generation_prompt -%}
  {{ '<start_of_turn>model\n' }}
{%- endif -%}