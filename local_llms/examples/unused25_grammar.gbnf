# Grammar that robustly handles <unused25> token
root ::= element*
element ::= text | special_token | ws

# Whitespace
ws ::= [ \t\n]+

# Regular text can include any standard characters except the special token markers
text ::= [a-zA-Z0-9.,!?;:()\[\]\"\']+

# Explicitly handle special token with its surrounding angle brackets
special_token ::= "<" "unused25" ">"

